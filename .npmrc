# Use official npm registry
registry=https://registry.npmjs.org/

# Increase network timeout to handle slow connections
fetch-timeout=300000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Retry failed downloads
fetch-retries=5

# Use strict SSL but allow some flexibility
strict-ssl=true

# Cache settings for better reliability
cache-min=3600
prefer-offline=false

# Force clean installs
prefer-dedupe=true

# Disable audit for faster installs in CI
audit=false
fund=false

# Use legacy peer deps for compatibility
legacy-peer-deps=true 